@model SecurityGuard.ViewModels.LogOnViewModel
@{
    ViewBag.Title = "LogOn";
}

<link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/signin.css?v=2")">
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>

<script src="@Url.Content("~/Content/SecurityGuard/scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/SecurityGuard/scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<div id="box_login">
    <div class="container">
        <div class="span12 box_wrapper">
            <div class="span12 box">
                <div>
                    <div class="head">
                        <h4>Log in to your account</h4>
                    </div>
                    <div class="form">
                        @using (Html.BeginForm())
                        {
                            @Html.LabelFor(m => m.UserName, new { @class = "legend-label" })
                            @Html.TextBoxFor(m => m.UserName, new {placeholder = "Username"})

                            @Html.LabelFor(m => m.Password, new { @class = "legend-label" })
                            @Html.PasswordFor(m => m.Password, new {placeholder = "Password"})

                            <div class="remember">
                                <div class="left">
                                     @Html.CheckBoxFor(m => m.RememberMe, new { style = "float:left;margin-right:10px;" })
                                     @Html.LabelFor(m => m.RememberMe)
                                </div> 
                                <div class="right">
                                    @Html.ActionLink("Forgot Password?", "ForgotPassword")
                                </div>
                            </div>
                        
                                if (ViewData.ModelState.Any())
                                {
                                    <div class="login-error">
                                        Your username or password is incorrect
                                    </div>            
                                }
                            <input type="submit" class="btn" value="Sign in"/>
                        }
                    </div>
                </div>
            </div>
            <p class="already">Don't have an account? @Html.ActionLink("Sign Up", "Register", "Account")</p>
        </div>
    </div>
</div>


<script type="text/javascript">
    $(function () {
        $("#UserName").focus();
    });
</script>