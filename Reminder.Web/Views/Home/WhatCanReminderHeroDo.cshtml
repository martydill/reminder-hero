@using ReminderHero.Models
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "What Can Reminder Hero Do For You?";
    ViewBag.MetaDescription = "Learn more about Reminder Hero's powerful Email and SMS reminders, and how they can help improve your life";
}

<div class="full-width-features feature-1 what-page" name="feature-set">
    <div>
        <div class="row-fluid">

            <h1>What can Reminder Hero do for you?</h1>
            <h2>Email and text message reminders for every aspect of your life, including:</h2>
        </div>
        <div class="row-fluid">
            <div class="span3 offset3 header-box">
                <ul>
                    <li><a href="/birthday-reminders">Birthday Reminders</a></li>
                    <li><a href="/anniversary-reminders">Anniversary Reminders</a></li>
                    <li><a href="/event-reminders">Event Reminders</a></li>
                    <li><a href="/task-reminders">Task Reminders</a></li>
                    <li><a href="/schedule-reminders">Schedule Reminders</a></li>
                </ul>
            </div>
            <div class="span3 header-box">
                <ul>
                    <li><a href="/appointment-reminders">Appointment Reminders</a></li>
                    <li><a href="/meeting-reminders">Meeting Reminders</a></li>
                    <li><a href="/tv-show-reminders">TV Show Reminders</a></li>
                    <li><a href="/bill-reminders">Bill Reminders</a></li>
                    <li><a href="/homework-reminders">Homework Reminders</a></li>
                </ul>
            </div>
        </div>

        <div class="row-fluid landing-page centered" style="height: 200px; margin-top: 30px">
            <h2>Important dates? Critical times? Reminders on-the-go?
                <br class="hidden-phone" />
                No matter what you need, Reminder Hero can do it all.</h2>

            <div class="top-buttons">
                <div>
                    <a href="/Account/Register" title="Sign up for Reminder Hero">
                        <input type="submit" value="Sign Up!" />
                    </a>
                </div>
            </div>
        </div>

        <div class="row-fluid">
            <div class="span10 offset1">
                <hr>
                <br>
            </div>
        </div>
        <div class="row-fluid" style="padding-bottom: 100px;">
            <div class="span3">
                <h3>Appointments</h3>
                <p>
                    You'll never miss an appointment again with Reminder Hero<br />
                    <b>"Dentist at 4:30pm on Thursday"</b>
                </p>
            </div>
            <div class="span3">
                <h3>Birthdays</h3>
                <p>
                    Tired of forgetting your friends and relatives' birthdays?<br />
                    <b>"Karen's birthday is June 4"</b>
                </p>
            </div>
            <div class="span3">
                <h3>Anniversaries</h3>
                <p>
                    Need a yearly reminder for your anniversary, or someone else's?<br />
                    <b>"Anniversary every year on May 17"</b>
                </p>
            </div>
            <div class="span3">
                <h3>Meetings</h3>
                <p>
                    Don't be late for another meeting!<br />
                    <b>"Finance meeting every Monday at 11am"</b>
                </p>
            </div>
        </div>
    </div>
</div>

<div class="footer">
    <div class="container">
        <div class="copyright">
            <p>
                Created By <a href="http://code-ninja.org">Marty</a>. Copyright 2013.<br>
            </p>
            <p>
                @Html.ActionLink("Terms Of Service", "TermsOfService", "Home") | @Html.ActionLink("Privacy Policy", "PrivacyPolicy", "Home")
            </p>
        </div>
    </div>
</div>
