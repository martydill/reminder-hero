    <script type="text/javascript" src="js/jquery.validate.js"></script>
    <!-- (form validation) -->
    <script type="text/javascript" src="js/jquery.watermark.min.js"></script>
    <!-- (form filler) -->
    <script type="text/javascript" src="js/theme.js"></script>
</head>

<body>
    <!-- TOP MENU
================================================== -->
    <div class="page-wrapper">

        <div class="agency-wrap">
            <div class="top-background">
                <div class="top-nav">
                    <div class="navbar">
                        <div class="navbar-inner">
                            <a href="/"><img src="/images/logo-40-white.png" width="40" height="40" style="float: left; border-radius: 4px; margin-top: 6px;" alt="Reminder Hero's Website Logo"></a>
                            <a class="brand" href="/">
                                <h1>Reminder Hero</h1>
                            </a>
                            <ul class="nav hidden-phone">
                                <li>
                                    <a href="#feature-set" class="contact-link">Features</a>
                                </li>
                                <li>
                                    <a href="#pricing" class="contact-link">Pricing</a>
                                </li>
                                <li>
                                    <a href="#contact" class="contact-link">Contact</a>
                                </li>
                                <li>
                                <a href="http://blog.example.com">Blog</a>
                                </li>
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <li>@Html.ActionLink("My Account", "Reminders", "Account")</li>
                                }
                                else
                                {
                                    <li>@Html.ActionLink("Log In", "LogOn", "Account")</li>
                                }
                            </ul>

                        </div>
                    </div>
                </div>

                <div class="header-main container">
                    <div class="row-fluid">
                        <div class="span12">
                             <h1>The <span style="color:#086DA5;"> Easiest</span> Way To Create Reminders</h1>
                            </div>
                       </div> 

                    <div class="row-fluid">
                        <div class="span4 offset2">
                                <img src="/Images/header-1.png" alt="Create reminders by sending an email" style="box-shadow: 4px 4px 5px #888888;margin:8px;"/>

                         
                         </div>
                          <div class="span4">
                                <img src="/Images/header-2.png" alt="Create reminders by sending an email" style="box-shadow: 4px 4px 5px #888888;margin:8px;"/>

                         
                         </div>
                    </div>

                    <div class="row-fluid">

                        <div class="span12">
                          
                            <br class="hidden-phone">
                            <div class="bottom-banner">
                                <h2>Just Email Or Text Reminder Hero <b>What</b> and <b>When</b>. It'll do the rest!</h2>
                            </div>

                            <div class="top-buttons">
                                <div class="pricing-button">
                                    <b><a  style="padding-top: 9px; padding-bottom: 9px;" class="button btn super-pricing-button" href="/Account/Register?plan=@PricePlan.PremiumPlanStripeId" title="Sign up for Reminder Hero!">Start Creating Reminders!</a></b>
                                </div>
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>

        <div class="full-width-features feature-1" name="feature-set">
            <div class="container">
                <div class="row">

                    <!-- SERVICES SECTION
                        Awesome icons provided by http://www.pixeden.com
                        ================================================== -->
                    <div class="span12">
                        <h1>Tired of forgetting the important things in life?</h1>
                        <h2>
                            All it takes is an email or a text.
                            <br class="hidden-phone">
                            Reminder Hero intelligently hears you, and alerts you when you need it.</h2>
                    </div>
                </div>
                <div class="row">
                    <div class="span12">
                        <hr>
                        <br>
                    </div>
                      <div class="span3">
                        <img src="images/feature04.png" width="128" height="128" alt="A clock, because Reminder Hero lets you create reminders for specific times or time intervals">
                        <h3>Intelligent Reminders</h3>
                        <p>
                            Reminder Hero understands your messages to figure out what you want and when you want it!<br />
                            <span class="sample-reminder">"Send Bob an email in an hour"</span>
                        </p>
                    </div>
                    <div class="span3">
                        <img src="images/feature01.png" width="128" height="128" alt="An image of an envelope showing Reminder Hero's email reminder capabilities.">
                        <h3>Easy Reminder Creation</h3>
                        <p>
                            Send us an email with whatever you want to be reminded of. That's it!<br />
                            <span class="sample-reminder">"Call Jen at 3:30pm"</span>
                        </p>
                    </div>
                    
                    <div class="span3">
                        <img src="images/feature03.png" width="128" height="128" alt="A text message icon showing Reminder Hero's SMS reminder features">
                        <h3>SMS Reminders</h3>
                        <p>
                            You love texting, and so do we! Text us your reminders and we'll text you back when it's time!<br />
                            <span class="sample-reminder">"Watch Breaking Bad on Sept 17 at 9pm"</span>
                        </p>
                    </div>
                  <div class="span3">
                        <img src="images/feature02.png" width="128" height="128" alt="A calendar showing a specific day. Reminder Hero lets you create recurring reminders for specific days.">
                        <h3>Recurring Reminders</h3>
                        <p>
                            Need to do something every day, week, or month? Just tell us!
                            <br />
                            <span class="sample-reminder">"Take out the trash every Friday"</span>
                        </p>
                    </div>
                </div>

                <div class="span12">
                    <hr/>
                    <br />
                    <h2>We currently have incoming SMS numbers for Canada, USA, and the UK.
                        <br class="hidden-phone">
                        If you can't send texts to these countries, <a href="#contact">let us know</a> and we'll see what we can do!</h2>
                </div>
            </div>
        </div>
        <div class="full-width-features feature-2">
            <div class="container" id="pricing">
                <div class="row">

                    <!-- PRICES TABLE
                        ================================================== -->
                    <div class="span12">
                        <h1>Price Plans That Fit Your Budget</h1>
                        <h2>Don't see a plan that meets your needs? <a href="#contact">Let us know!</a></h2>
                    </div>
                </div>
                <div class="row">
                    <div class="span12">
                    </div>
                    <div class="span12">
                        <div class="pricing-table-wrapper">
                            <div class="pricing-table row-fluid">

                                <ul class="pricing-column span4">
                                    <li class="pricing-title">Email Plan</li>

                                    <li class="pricing-price">$@PricePlan.EmailPlanCost <span>/month</span>
                                    </li>
                                    <li><b>@PricePlan.EmailPlanEmails</b> Email Reminders Per Month</li>
                                    <li>Up to <b>@PricePlan.EmailPlanEmailAddressesAllowed</b> Email Addresses</li>
                                    <li>&nbsp;</li>
                                    <li>&nbsp;</li>
                                    <li class="pricing-button">
                                        <b><a class="button btn" href="/Account/Register?plan=@PricePlan.EmailPlanStripeId" title="Sign up for the Email plan at $@PricePlan.EmailPlanCost per month">Start Creating Reminders!</a></b>
                                    </li>
                                </ul>

                                <ul class="pricing-column pricing-column-featured span4">
                                    <li class="pricing-title">Premium Plan</li>

                                    <li class="pricing-price">$@PricePlan.PremiumPlanCost <span>/month</span>
                                    </li>

                                    <li><b>@PricePlan.PremiumPlanEmails</b> Email Reminders Per Month</li>
                                    <li>Up to <b>@PricePlan.PremiumPlanEmailAddressesAllowed</b> Email Addresses</li>
                                    <li><b>@PricePlan.PremiumPlanSmses</b> SMS Reminders Per Month</li>
                                    <li>Up to <b>@PricePlan.PremiumPlanPhoneNumbersAllowed</b> Phone Numbers</li>

                                    <li class="pricing-button">
                                        <b><a class="button btn super-pricing-button" href="/Account/Register?plan=@PricePlan.PremiumPlanStripeId" title="Sign up for the Premium plan at $@PricePlan.PremiumPlanCost per month">Start Creating Reminders!</a></b>
                                    </li>
                                </ul>
                                <ul class="pricing-column span4">
                                    <li class="pricing-title">Business Plan</li>

                                    <li class="pricing-price">$@PricePlan.BusinessPlanCost<span>/month</span>
                                    </li>

                                    <li><b>Unlimited</b> Email Reminders</li>
                                    <li><b>Unlimited</b> Email Addresses</li>
                                    <li><b>1000</b> SMS Reminders Per Month</li>
                                    <li><b>Unlimited</b> Phone Numbers</li>
                                    <li class="pricing-button">
                                        <a class="button btn" href="#" title="Sign up for the Business plan at $@PricePlan.BusinessPlanCost per month">Coming Soon!</a>
                                    </li>
                                </ul>

                            </div>
                            <h2 style="margin-top:20px;">Or sign up for our <a href="/Account/Register?plan=@PricePlan.FreePlanStripeId">Free Plan</a> and get 5 email reminders per month, free!</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- BOTTOM SECTION
            ================================================== -->
        @*   <div class="container call-to-action">
            <h1>Reminder Hero
                <br class="visible-phone">
                Is<br class="visible-phone">
                Coming!</h1>
            <a href="#top" class="scroll-top">REGISTER!</a>
        </div>
        <div class="end_page">
            <a href="#contact" class="contact-link">
                <img src="images/email.png" alt="logo"></a>
        </div>*@


        <!-- CONTACT FORM & MAP
            ================================================== -->
        <div class="footer" name="contact">
            <div class="container contact-form">
                <div class="row">
                    <div class="span12">
                        <br />
                        <h3>Contact Us</h3>
                        <h4>Or find us on Twitter <a href="http://twitter.com/example-twitter-account">@@example-twitter-account</a></h4>
                    </div>
                    <form action="/Home/Contact" method="post" class="theme-form">
                        <div class="row">
                        <div class="span2 offset2">
                            <input type="text" name="Name" title="Name" class="required" id="name-field">
                        </div>
                        <div class="span2">
                            <input type="email" name="Email" title="Email" class="email required" id="email-field">
                        </div>
                        <div class="span2">
                            <input type="text" name="Phone" title="Phone" id="phone-field">
                        </div>
                        <div class="span2">
                            <input type="text" name="Company" title="Company" id="company-field">
                        </div>
                            </div>
                        <div class="row">
                        <div class="span8 offset2 comments-textarea">
                            <textarea name="Message" title="" id="comments-field"></textarea>
                        </div>
                            </div>
                        <div class="span4 offset4">
                            <input type="hidden" name="say" value="hello">
                            <input type="submit" class="super-pricing-button" value="SUBMIT!">
                        </div>
                            <input type="text" name="LeaveBlank" title="LeaveBlank" id="leaveblank-field">
                    </form>
                </div>
            </div>
            <div class="container">
                <div class="copyright">
                    <p>
                        Created By <a href="http://code-ninja.org">Marty Dill</a>. Copyright 2013.<br>
                    </p>
                    <p>
                        @Html.ActionLink("Terms Of Service", "TermsOfService", "Home") | @Html.ActionLink("Privacy Policy", "PrivacyPolicy", "Home")
                    </p>
                </div>
            </div>
        </div>
    </div>

